<div class="container">

  <header class="profile_header">
    <div class="row">
      <div class="col-2">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'profile-photo' %>
        <% else %>
          <%= image_tag "pfp.jpg", class: "profile-photo" %>
        <% end %>
      </div>
      <div class="col">
        <h2><%= @user.display_name%></h2><br>
        <%= "#{@user.first_name} #{@user.last_name}" %>
      </div>
      <div class="col">
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'nav-link' %>
      </div>
    </div>
  </header>
  <div class="row">
    <div class="col">
      <label>Profile URL</label><br>
      <p><%= profile_url(@user.profile_id)%></p>
    </div>
    <div class="col">
      <label>City</label><br>
      <%= @user.city %>
    </div>
    <div class="col">
      <label>Country</label><br>
      <%= @user.country %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <br><label>Bio</label><br>
      <%= @user.bio %>
    </div>
    <div class="col-2">
      <label>Followers</label><br>
      <%= @user.followers_count %>
    </div>
    <div class="col-2">
      <label>Following</label><br>
      <%= @user.following_count %>
    </div>
    <div class="col-2">
      <label>Tracks</label><br>
      <%= @user.tracks_count %>
    </div>
    <div class="col-2">
        <label>Likes</label><br>
         <%= find_likes_per_user(@user.id) %>
      </div>
  </div>
  <div class="tracks">
    <h2>Tracks</h2>
    <% if @user.tracks_count.zero? %>
      <p>Seems a little quiet over here.</p>
      <%= link_to 'Upload', new_track_path, class: 'btn btn-accent' %>
    <% else %>
      <%= render 'profile/user_tracks', locals: {user: @user}%>
    <% end %>
  </div>
</div>