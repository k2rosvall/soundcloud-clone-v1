<div class="container">
    <header class="profile_header">
      <div class="row">
        <div class="col-2">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: 'profile-photo' %>
          <% else %>
            <%= image_tag "pfp.jpg", class: "profile-photo" %>
          <% end %>
        </div>
        <div class="col">
          <h2><%= @user.display_name%></h2><br>
          <%= "#{@user.first_name} #{@user.last_name}" %>
        </div>
      </div>
    </header>
    <div class="row">
      <div class="col-6">
        <br><label>Bio</label><br>
        <%= @user.bio %>
      </div>
      <div class="col-2">
        <label>Followers</label><br>
        <%= @user.followers_count %>
      </div>
      <div class="col-2">
        <label>Following</label><br>
        <%= @user.following_count %>
      </div>
      <div class="col-2">
        <label>Tracks</label><br>
        <%= @user.tracks_count %>
      </div>
    </div>
    <div class="tracks">
      <h2>Tracks</h2>
      <% if @user.tracks.length.zero? %>
      <p>This is user hasn't upload any tracks. </p>
    <% else %>
      <%= render 'profile/user_tracks', locals: {user: @user}%>
    <% end %>
    </div>
</div>