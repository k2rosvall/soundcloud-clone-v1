<h2>Edit your profile </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col">
      <div class="field form-group w-25">
        <% if resource.avatar.attached? %>
          <%= image_tag resource.avatar, class: 'profile-photo' %>
        <% else %>
          <%= image_tag "pfp.jpg", class: "profile-photo" %>
        <% end %>
        <%= f.file_field :avatar, accept: 'image/png,image/jpg,image/jpeg', class: 'form-control' %>
      </div>
    </div>
    <div class="col">
      <div class="row">
        <div class="col field form-group w-25">
          <label>First Name<i class="field-requiered" >*</i></label>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control'%>
        </div>

        <div class="col field form-group w-25">
          <label>Last Name<i class="field-requiered" >*</i></label>
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col field form-group w-25">
          <label>Display Name</label>
          <%= f.text_field :display_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="col field form-group w-25">
          <label>Profile URL<i class="field-requiered" >*</i></label>
          <%= f.text_field :profile_id, autofocus: true, class: 'form-control' %>
        </div>
      </div>

     
      <div class="row">
        <div class="col field form-group w-25">
          <label>City</label>
          <%= f.text_field :city, autofocus: true, class: 'form-control' %>
        </div>

        <div class="col field form-group w-25">
          <label>Country</label>
          <%= f.text_field :country, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col field form-group w-25">
          <label>Bio</label>
          <%= f.text_field :bio, autofocus: true, class: 'form-control bio-field' %>
        </div>
      </div>

    </div>
  </div>
  <div class="field form-group w-25">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>
  <div class="field form-group w-25">
    <p>Enter your password to update your profile</>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>
  <div class="actions form-group w-25">
    <%= f.submit "Update", class: 'btn btn-accent'%>
  </div>
<% end %>
<%= link_to 'Go Back', profile_path(current_user.profile_id), class: 'nav-link' %>
