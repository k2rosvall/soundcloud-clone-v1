<% if current_user.nil? || current_user.profile_id != params[:profile_id]%>
   <% @visited_user = find_user%>
    <div class="container">
      <div class="row">
        <div class="col-2">
          <% if @visited_user.avatar.attached? %>
            <%= image_tag @visited_user.avatar, class: 'profile-photo' %>
          <% else %>
            <%= image_tag "pfp.jpg", class: "profile-photo" %>
          <% end %>
        </div>
        <div class="col">
          <label>Display Name:</label><br>
          <%= @visited_user.display_name%>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <br><label>Bio</label><br>
          <%= @visited_user.bio %>
        </div>
        <div class="col-2">
          <label>Followers</label><br>
          <%= @visited_user.followers_count %>
        </div>
        <div class="col-2">
          <label>Following</label><br>
          <%= @visited_user.following_count %>
        </div>
        <div class="col-2">
          <label>Tracks</label><br>
          <%= @visited_user.tracks_count %>
        </div>
      </div>
      <div class="tracks">
        <h2>Tracks</h2>
        <% if @visited_user.tracks_count.zero? %>
          <p>This user hasn't upload any tracks</p>
        <% end %>
      </div>
    </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-2">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'profile-photo' %>
        <% else %>
          <%= image_tag "pfp.jpg", class: "profile-photo" %>
        <% end %>
      </div>
      <div class="col">
        <label>Display Name:</label><br>
        <%= @user.display_name%>
      </div>
      <div class="col">
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'nav-link' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label>Profile URL</label><br>
        <p>soundcloud.com/<%= @user.profile_id%></p>
      </div>
      <div class="col">
        <label>City</label><br>
        <%= @user.city %>
      </div>
      <div class="col">
        <label>Country</label><br>
        <%= @user.country %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <br><label>Bio</label><br>
        <%= @user.bio %>
      </div>
      <div class="col-2">
        <label>Followers</label><br>
        <%= @user.followers_count %>
      </div>
      <div class="col-2">
        <label>Following</label><br>
        <%= @user.following_count %>
      </div>
      <div class="col-2">
        <label>Tracks</label><br>
        <%= @user.tracks_count %>
      </div>
    </div>
    <div class="tracks">
      <h2>Tracks</h2>
      <% if @user.tracks_count.zero? %>
        <p>Seems a little quiet over here.</p>
        <button class="btn btn-accent">Upload now</button>
      <% end %>
    </div>
  </div>
<% end %>
  
 
  

  
  
